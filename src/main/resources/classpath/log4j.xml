<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c:%-3L - %m%n" />
		</layout>
	</appender>

	<appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="DEBUG" />
		<param name="MaxFileSize" value="15MB" />
		<param name="MaxBackupIndex" value="10" />
		<param name="File" value="var/log/havis.testautomat.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c:%-3L - %m%n" />
		</layout>
	</appender>


	<logger name="org.springframework">
		<level value="info" />
	</logger>

	<logger name="Havis.RfidTestSuite">
		<level value="info" />
	</logger>

	<logger name="org.eclipse.jetty.util">
		<level value="info" />
	</logger>

	<!-- <logger name="org.eclipse.jetty.websocket"> <level value="info" /> 
		</logger> -->

	<logger name="org.eclipse.jetty.io">
		<level value="info" />
	</logger>

	<!-- debug: HTTP communication from/to hardware stub via REST API -->
	<logger name="org.apache.http">
		<level value="debug" />
	</logger>

	<logger name="org.jboss.resteasy">
		<level value="info" />
	</logger>

	<root>
		<level value="debug" />
		<appender-ref ref="fileAppender" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>
